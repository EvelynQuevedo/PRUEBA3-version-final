<% include partials/_header %>

<div class="container mt-5">
  <div class="row">


    <div class="col-md-5">
      <div class="card-body">

        <form action="/add" method="POST">
        
        <div class="form-group">
            <input type="text" name="idBiblioteca" placeholder="idBiblioteca" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="direccion" placeholder="direccion" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="director" placeholder="director" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="telefono" placeholder="telefono" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="tipo" placeholder="tipo" class="form-control">
          </div>
          </div>
          <button type="submit" class="btn btn-primary">
            GUARDAR 
          </button>
        </form>
      </div>
    </div>




    <div class="col-md-6">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>idBiblioteca</td>
            <td>direccion</td>
            <td>director</td>
            <td>telefono</td>
            <td>tipo</td>
            <td>Accion</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                
                <td><%= data[i].idBiblioteca %></td>
                <td><%= data[i].direccion %></td>
                <td><%= data[i].director %></td>
                <td><%= data[i].telefono %></td>
                <td><%= data[i].tipo %></td>
                <td>
                  <a href="/update/<%= data[i].idBiblioteaca %>" class="btn btn-info">Edit</a>
                  <a href="/delete/<%= data[i].idBiblioteaca %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<% include partials/_footer %>